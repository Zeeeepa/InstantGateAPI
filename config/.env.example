# InstantGate API Environment Variables

# Server
INSTANTGATE_SERVER_PORT=8080
INSTANTGATE_SERVER_READ_TIMEOUT=30s
INSTANTGATE_SERVER_WRITE_TIMEOUT=30s
INSTANTGATE_SERVER_IDLE_TIMEOUT=60s

# Database
INSTANTGATE_DATABASE_DRIVER=mysql
INSTANTGATE_DATABASE_HOST=localhost
INSTANTGATE_DATABASE_PORT=3306
INSTANTGATE_DATABASE_NAME=instantgate
INSTANTGATE_DATABASE_USER=root
INSTANTGATE_DATABASE_PASSWORD=
INSTANTGATE_DATABASE_MAX_OPEN_CONNS=25
INSTANTGATE_DATABASE_MAX_IDLE_CONNS=5
INSTANTGATE_DATABASE_CONN_MAX_LIFETIME=5m

# JWT
INSTANTGATE_JWT_SECRET=change-me-in-production
INSTANTGATE_JWT_EXPIRY=24h
INSTANTGATE_JWT_ISSUER=instantgate

# Redis
INSTANTGATE_REDIS_HOST=localhost
INSTANTGATE_REDIS_PORT=6379
INSTANTGATE_REDIS_PASSWORD=
INSTANTGATE_REDIS_DB=0
INSTANTGATE_REDIS_CACHE_TTL=5m

# Security
INSTANTGATE_SECURITY_ENABLED=true
INSTANTGATE_SECURITY_REQUIRE_AUTH=false

# Logging
INSTANTGATE_LOGGING_LEVEL=info
INSTANTGATE_LOGGING_FORMAT=json
